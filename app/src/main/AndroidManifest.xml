<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.li.education">

    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.REQUIRED_PERMISSION_HERE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT" />
    <uses-permission android:name="android.permission.CAPTURE_VIDEO_OUTPUT"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GuiActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".main.identify.IdentifyActivity"></activity>
        <activity android:name=".main.mine.ExamActivity"></activity>
        <activity android:name=".main.mine.ExamRecordActivity"></activity>
        <activity android:name=".main.mine.LoginActivity"></activity>
        <activity android:name=".main.mine.InfoActivity"></activity>
        <activity android:name=".main.mine.ModifyActivity"></activity>
        <activity android:name=".main.mine.FeedBackActivity"></activity>
        <activity android:name=".main.home.NewDetailsActivity"></activity>
        <activity
            android:name=".main.study.PlayActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"></activity>
        <activity android:name=".main.mine.RegisterActivity"></activity>
        <activity android:name=".main.mine.LocationActivity"></activity>
        <activity android:name=".main.mine.AboutActivity"></activity>
        <activity android:name=".main.mine.StudyRecordActivity"></activity>
        <activity android:name=".main.study.PlayListActivity"></activity>
        <activity android:name=".main.mine.StudyRecordDetailsActivity"></activity>
        <activity
            android:name=".main.identify.ScanActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>