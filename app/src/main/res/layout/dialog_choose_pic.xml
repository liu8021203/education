<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/dialog_pic_layout_bg"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/choose_pic_button"
                android:text="拍照"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#f0f0f0"></View>

            <Button
                android:id="@+id/btn_photo"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/choose_pic_bottom_button"
                android:text="从相片中选一张"/>

        </LinearLayout>
        
        
        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:textColor="@color/black"
            android:background="@drawable/choose_pic_cancle_bg"
            android:text="取消"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="10dip"></View>

    </LinearLayout>

</LinearLayout>
